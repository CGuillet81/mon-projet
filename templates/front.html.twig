<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Hind:wght@300&display=swap" rel="stylesheet">
    <title>{% block titre %} Mon site {% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
    <link rel="icon" type="image/pgn" href="{{ asset('img/favicon.png') }}"/>



</head>
<body>
    <header>
    
<!-- Responsive navbar-->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container px-5">
    <img class="logoCouleur" src="{{ asset('img/logo.svg') }}" width="30">
    <a class="navbar-brand" href="{{ path('accueil')}}"> Mon site </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
        {% set chemin = app.request.get('_route') %}
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link {% if chemin == 'accueil' %} active {% endif %}" aria-current="page" href="{{ path('accueil')}}">Accueil</a></li>
                <li class="nav-item"><a class="nav-link {% if chemin == 'list' %} active {% endif %}" aria-current="page" href="{{ path('liste')}}">Liste</a></li>
                <li class="nav-item"><a class="nav-link {% if chemin == 'ajouter' %} active {% endif %}" aria-current="page" href="{{ path('ajouter')}}">Ajouter</a></li>
                <li class="nav-item"><a class="nav-link {% if chemin == 'contact' %} active {% endif %}" aria-current="page" href="{{ path('contact')}}">Contact</a></li>
                <li class="nav-item"><a class="nav-link {% if chemin == 'about' %} active {% endif %}" aria-current="page" href="{{ path('about')}}">About</a></li>

            </ul>
        </div>
    </div>
</nav>
 
     
     
    </header>   

    {% block central %} Titre ICI {% endblock %}


    <section class="container">
        Mon site de souhaits
        <br><br><br><br>
